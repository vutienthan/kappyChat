  final GoogleTranslator translator = GoogleTranslator();

  String _translateLanguage = 'en';
  String selectedLanguage = 'English';


  final Map<String, String> languages = {
    "Африкаанс": "af",
    "Албанский": "sq",
    "Амхарский": "am",
    "Арабский": "ar",
    "Армянский": "hy",
    "Азербайджанский": "az",
    "Баскский": "eu",
    "Белорусский": "be",
    "Бенгальский": "bn",
    "Боснийский": "bs",
    "Болгарский": "bg",
