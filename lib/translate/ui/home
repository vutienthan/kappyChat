    "Шотландский гэльский": "gd",
    "Сербский": "sr",
    "Сесото": "st",
    "Шона": "sn",
    "Синдхи": "sd",
    "Сингальский": "si",
    "Словацкий": "sk",
    "Словенский": "sl",
    "Сомали": "so",
    "Испанский": "es",
    "Суданский": "su",
    "Суахили": "sw",
    "Шведский": "sv",
    "Таджикский": "tg",
    "Тамильский": "ta",
    "Телугу": "te",
    "Тайский": "th",
    "Турецкий": "tr",
    "Украинский": "uk",
    "Урду": "ur",
    "Узбекский": "uz",
    "Вьетнамский": "vi",
